mixin banner-presentation()
  section.section-banner-presentation()
    .container
      .banner-presentation
        .banner-presentation__left
          .banner-presentation__title Получите презентацию
          .banner-presentation__desc Дома с планировками, полным описанием и презентацией
          .banner-presentation__form
            form(action='#' method='POST')
              .form
                .form__item
                  .form__subitem: input(type="text" placeholder="Ваше имя")
                  .form__subitem: input(type="tel" placeholder="Ваш номер телефона")
                .form__item
                  .form__subitem: button.btn.btn-large(type="submit") Получить презентацию


        .banner-presentation__right
          +bgimage('/img/home/popup.webp')

mixin banner-presentation-popup()
  section.section-banner-presentation()
    .container
      .banner-presentation
        .banner-presentation__left
          .banner-presentation__title Полная база объектов <br> в поселке Барвиха&nbsp21 - <br> получить презентацию
          .banner-presentation__form
            form(action='#' method='POST')
              .form
                .form__item: input(type="text" placeholder="Ваше имя")
                .form__item: input(type="tel" placeholder="Ваш номер телефона")
                .form__item: button.btn(type="submit") Отправить
                .form__item: +checkbox('Я соглашаюсь на обработку персональных данных')
                .form__item
                  .banner-presentation__note Получите презентацию объектов от наших экспертов




        .banner-presentation__right
          +bgimage('/img/home/popup.webp')
          a(href='#download'): +icons('#ic_dl', 37)
