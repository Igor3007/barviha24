include ../minicard/minicard.pug



mixin catalog-filter
  section.section-catalog-filter
    .container
      .catalog-filter__title  ПОДБЕРИТЕ ДОМ <br> <span>на Новорижском шоссе <span>
      .catalog-filter
        .catalog-filter__aside
          
          .filter-box
            .filter-box__wrp
              .filter-box__item: +filter-checkbox(app.filter.type)
              .filter-box__item: +filter-range-price(app.filter.price)
              .filter-box__item: +filter-range(app.filter.square)
              .filter-box__item: +filter-range(app.filter.mkad)
              .filter-box__item: +filter-checkbox(app.filter.vilage)
              .filter-box__item: +filter-range(app.filter.area)
              .filter-box__item: +filter-range(app.filter.level)
              .filter-box__item: +filter-checkbox(app.filter.finish)
              .filter-box__item
                .filetr-clear Сбросить фильтр

        .catalog-filter__content
          .catalog-filter__topbar
            .catalog-filter__count Найдено объектов: 86
            .catalog-filter__sort
              +sortable-box
          .filter-toggle
            button.btn ОТКРЫТЬ ФИЛЬТР
          .catalog-filter__list
            each item in app.homeCat
              .catalog-filter__item: +minicard('1', true)

mixin filter-checkbox(data)
  .filter-checkbox.open
    .filter-checkbox__head(data-filter="show")= data.title
    .filter-checkbox__prop
      each prop in data.value
        label
          input(type="checkbox")
          span.checkbox-elem
          span.checkbox-text(data-count="(10)")= prop 
        



mixin filter-range-price(data)
  .filter-range-price.open
    .filter-range-price__head(data-filter="show")= data.title

    
     

    .filter-range-price__range
      .filter-range-price__select
        label.price-toggle
          input(type="checkbox")
          span за объект
      .filter-range-price__slider
        div(data-noui="range")
      .filter-range-price__fields
        .filter-range-price__input: input(type="text" placeholder=data.minValue)
        .filter-range-price__sp -
        .filter-range-price__input: input(type="text" placeholder=data.maxValue)





mixin filter-range(data)
  .filter-range.open
    .filter-range__head(data-filter="show")= data.title
    .filter-range__range
      .filter-range__slider
        div(data-noui="range" )
      .filter-range__fields
        .filter-range__input: input(type="text" placeholder=data.minValue)
        .filter-range__sp —
        .filter-range__input: input(type="text" placeholder=data.maxValue)


mixin sortable-box
  .sortable-box
    .sortable-box__type
      label
        input(type="radio" name="type-sort" checked)
        span по цене
      label
        input(type="radio" name="type-sort")
        span по дате
    .sortable-box__direction
      label
        input(type="radio" name="direction-sort" checked)
        +icons('#ic_arr-up')
      label
        input(type="radio" name="direction-sort")
        +icons('#ic_arr-down')